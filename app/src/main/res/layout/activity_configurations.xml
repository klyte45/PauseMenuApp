<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.Configurations">

    <com.halkyproject.pausemenu.components.CustomTextView
            android:id="@+id/title"
            android:text="@string/pauseMenu.menuItem.config"
            app:font_name="Sva"
            android:textSize="60sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/colorPrimary"
            android:maxLines="1"
            android:textAlignment="center"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/title"
                tools:showIn="@layout/activity_pause_menu_main">

            <com.halkyproject.pausemenu.components.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/customTextView"
                    android:layout_weight="1"
                    android:text="@string/config.nasc"
                    app:font_name="Sva"
                    android:textAlignment="center"
                    android:textSize="36sp"
                    android:textColor="@color/colorSubtitle"
                    app:textAllCaps="false"
                    android:maxLines="1"
                    tools:layout_editor_absoluteY="324dp"
                    tools:layout_editor_absoluteX="8dp"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:onClick="showPickerDtNasc"
                    android:clickable="true"
                    android:focusable="true"
                    >

                <com.halkyproject.pausemenu.components.CustomTextView
                        android:id="@+id/item_dtNasc"
                        android:text="@string/config.dtNasc"
                        app:font_name="VideoGame"
                        android:textSize="@dimen/mainMenu.listItem.fontSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:textAllCaps="true"
                        android:textColor="@color/defaultMenuItemColor"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"/>

                <com.halkyproject.pausemenu.components.CustomTextView
                        android:id="@+id/val_dtNasc"
                        app:font_name="VideoGame"
                        android:textSize="@dimen/mainMenu.listItem.fontSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:textAllCaps="true"
                        android:textColor="@color/colorAccent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:textAlignment="textEnd"
                        android:tag="value"
                        android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:onClick="showPickerHrNasc"
                    android:clickable="true"
                    android:focusable="true">

                <com.halkyproject.pausemenu.components.CustomTextView
                        android:id="@+id/item_hrNasc"
                        android:text="@string/config.hrNasc"
                        app:font_name="VideoGame"
                        android:textSize="@dimen/mainMenu.listItem.fontSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:textAllCaps="true"
                        android:textColor="@color/defaultMenuItemColor"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"/>

                <com.halkyproject.pausemenu.components.CustomTextView
                        android:id="@+id/val_hrNasc"
                        app:font_name="VideoGame"
                        android:textSize="@dimen/mainMenu.listItem.fontSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:textAllCaps="true"
                        android:textColor="@color/colorAccent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:tag="value"/>

            </LinearLayout>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:onClick="showPickerTzNasc"
                    android:clickable="true"
                    android:focusable="true">

                <com.halkyproject.pausemenu.components.CustomTextView
                        android:id="@+id/item_fusoNasc"
                        android:text="@string/config.fusoNasc"
                        app:font_name="VideoGame"
                        android:textSize="@dimen/mainMenu.listItem.fontSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:textAllCaps="true"
                        android:textColor="@color/defaultMenuItemColor"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"/>

                <com.halkyproject.pausemenu.components.CustomTextView
                        android:id="@+id/val_tzNasc"
                        app:font_name="VideoGame"
                        android:textSize="@dimen/mainMenu.listItem.fontSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:textAllCaps="true"
                        android:textColor="@color/colorAccent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        android:textAlignment="textEnd"
                        android:tag="value"/>

            </LinearLayout>

            <com.halkyproject.pausemenu.components.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/customTextView2"
                    android:layout_weight="1"
                    android:text="@string/config.companies"
                    app:font_name="Sva"
                    android:textAlignment="viewStart"
                    android:textSize="36sp"
                    android:textColor="@color/colorAccent"
                    app:textAllCaps="false"
                    android:maxLines="1"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="goToCompanyCrud"
                    android:textStyle="normal"/>

            <com.halkyproject.pausemenu.components.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/titleServerConfig"
                    android:layout_weight="1"
                    android:text="@string/config.serverConfigs"
                    app:font_name="Sva"
                    android:textAlignment="center"
                    android:textSize="36sp"
                    android:textColor="@color/colorSubtitle"
                    app:textAllCaps="false"
                    android:maxLines="1"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_weight="1">

                <com.halkyproject.pausemenu.components.CustomTextView
                        android:id="@+id/item_serverUrl"
                        android:text="@string/config.urlServer"
                        app:font_name="VideoGame"
                        android:textSize="@dimen/mainMenu.listItem.fontSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:textAllCaps="true"
                        android:textColor="@color/defaultMenuItemColor"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        />

                <com.halkyproject.pausemenu.components.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:textAllCaps="true"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        style="@style/default_input"
                        android:id="@+id/val_serverUrl"
                        android:maxLines="1"
                        android:lines="1"
                        android:singleLine="true"/>

                <com.halkyproject.pausemenu.components.CustomTextView
                        android:id="@+id/item_serverKey"
                        android:text="@string/config.serverKey"
                        app:font_name="VideoGame"
                        android:textSize="@dimen/mainMenu.listItem.fontSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:textAllCaps="true"
                        android:textColor="@color/defaultMenuItemColor"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        />

                <com.halkyproject.pausemenu.components.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:textAllCaps="true"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        style="@style/default_input"
                        android:id="@+id/val_serverKey"
                        android:maxLines="1"
                        android:lines="1"
                        android:singleLine="true"
                        android:inputType="textPassword"/>

            </LinearLayout>


            <com.halkyproject.pausemenu.components.CustomTextView
                    android:text="@string/all.save"
                    app:font_name="VideoGame"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/defaultBg"
                    android:layout_weight="1"
                    app:textAllCaps="true"
                    android:id="@+id/saveButtonServer"
                    android:textAlignment="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/text_caret_1980"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="saveServerUrl"/>

            <com.halkyproject.pausemenu.components.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/titleSecurityConfig"
                    android:layout_weight="1"
                    android:text="@string/config.securityConfig"
                    app:font_name="Sva"
                    android:textAlignment="center"
                    android:textSize="36sp"
                    android:textColor="@color/colorSubtitle"
                    app:textAllCaps="false"
                    android:maxLines="1"/>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_weight="1">

                <com.halkyproject.pausemenu.components.CustomTextView
                        android:id="@+id/item_currentPIN"
                        android:text="@string/config.currentPIN"
                        app:font_name="VideoGame"
                        android:textSize="@dimen/mainMenu.listItem.fontSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:textAllCaps="true"
                        android:textColor="@color/defaultMenuItemColor"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        />

                <com.halkyproject.pausemenu.components.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:textAllCaps="true"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        style="@style/default_input"
                        android:id="@+id/val_currentPin"
                        android:maxLines="1"
                        android:lines="1"
                        android:singleLine="true"
                        android:inputType="numberPassword"/>

            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_weight="1">

                <com.halkyproject.pausemenu.components.CustomTextView
                        android:id="@+id/item_newPIN"
                        android:text="@string/config.newPin"
                        app:font_name="VideoGame"
                        android:textSize="@dimen/mainMenu.listItem.fontSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:textAllCaps="true"
                        android:textColor="@color/defaultMenuItemColor"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        />

                <com.halkyproject.pausemenu.components.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:textAllCaps="true"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        style="@style/default_input"
                        android:id="@+id/val_newPin"
                        android:maxLines="1"
                        android:lines="1"
                        android:singleLine="true"
                        android:inputType="numberPassword"/>

            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_weight="1">

                <com.halkyproject.pausemenu.components.CustomTextView
                        android:id="@+id/item_confirmPIN"
                        android:text="@string/config.confirmPIN"
                        app:font_name="VideoGame"
                        android:textSize="@dimen/mainMenu.listItem.fontSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:textAllCaps="true"
                        android:textColor="@color/defaultMenuItemColor"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        />

                <com.halkyproject.pausemenu.components.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:textAllCaps="true"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        style="@style/default_input"
                        android:id="@+id/val_confirmPin"
                        android:maxLines="1"
                        android:lines="1"
                        android:singleLine="true"
                        android:inputType="numberPassword"/>

            </LinearLayout>

            <com.halkyproject.pausemenu.components.CustomTextView
                    android:text="@string/all.save"
                    app:font_name="VideoGame"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/defaultBg"
                    android:layout_weight="1"
                    app:textAllCaps="true"
                    android:id="@+id/saveButton2"
                    android:textAlignment="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/text_caret_1980"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="savePin"/>

        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
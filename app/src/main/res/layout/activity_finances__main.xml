<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.finances.FinancesMain">

    <com.halkyproject.pausemenu.components.CustomTextView
            android:id="@+id/title"
            android:text="@string/pauseMenu.menuItem.financas"
            app:font_name="Sva"
            android:textSize="60sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:maxLines="1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:textAlignment="center"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/title"
                tools:showIn="@layout/activity_pause_menu_main">

            <com.halkyproject.pausemenu.components.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/customTextView"
                    android:layout_weight="1"
                    android:text="@string/finances.accounts"
                    app:font_name="Sva"
                    android:textAlignment="center"
                    android:textSize="36sp"
                    android:textColor="@color/colorAccent"
                    app:textAllCaps="false"
                    android:maxLines="1"
                    tools:layout_editor_absoluteY="324dp"
                    tools:layout_editor_absoluteX="8dp"
                    android:singleLine="true"
                    android:onClick="openAccountScreen"/>

            <com.halkyproject.pausemenu.components.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/customTextView4"
                    android:layout_weight="1"
                    android:text="@string/finances.movSources"
                    app:font_name="Sva"
                    android:textAlignment="center"
                    android:textSize="36sp"
                    android:textColor="@color/colorAccent"
                    app:textAllCaps="false"
                    android:maxLines="1"
                    tools:layout_editor_absoluteY="324dp"
                    tools:layout_editor_absoluteX="8dp"
                    android:singleLine="true"
                    android:onClick="openMovementSourcesScreen"/>


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.finances.FinancesMain">

    <com.halkyproject.pausemenu.components.CustomTextView
            android:id="@+id/title"
            android:text="@string/pauseMenu.menuItem.financas"
            app:font_name="Sva"
            android:textSize="60sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:maxLines="1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:singleLine="true"
            android:textAlignment="center"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/title"
                tools:showIn="@layout/activity_pause_menu_main">

            <com.halkyproject.pausemenu.components.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tt_crud"
                    android:layout_weight="1"
                    android:text="@string/all.crud"
                    app:font_name="Sva"
                    android:textAlignment="center"
                    android:textSize="36sp"
                    android:textColor="@color/colorSubtitle"
                    app:textAllCaps="false"
                    android:maxLines="1"/>

            <com.halkyproject.pausemenu.components.CustomTextView
                    android:text="@string/finances.accounts"
                    app:font_name="VideoGame"
                    android:textSize="@dimen/mainMenu.listItem.fontSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:textAllCaps="true"
                    android:textColor="@color/defaultMenuItemColor"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/it_accounts"
                    android:onClick="openAccountScreen"
                    android:layout_weight="1"/>

            <com.halkyproject.pausemenu.components.CustomTextView
                    android:text="@string/finances.movSources"
                    app:font_name="VideoGame"
                    android:textSize="@dimen/mainMenu.listItem.fontSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:textAllCaps="true"
                    android:textColor="@color/defaultMenuItemColor"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/it_movSources"
                    android:onClick="openMovementSourcesScreen"
                    android:layout_weight="1"/>

            <com.halkyproject.pausemenu.components.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tt_reports"
                    android:layout_weight="1"
                    android:text="@string/all.reports"
                    app:font_name="Sva"
                    android:textAlignment="center"
                    android:textSize="36sp"
                    android:textColor="@color/colorSubtitle"
                    app:textAllCaps="false"
                    android:maxLines="1"/>

            <com.halkyproject.pausemenu.components.CustomTextView
                    android:text="@string/finances.currentBalance"
                    app:font_name="VideoGame"
                    android:textSize="@dimen/mainMenu.listItem.fontSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:textAllCaps="true"
                    android:textColor="@color/defaultMenuItemColor"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/it_currentBalance"
                    android:layout_weight="1"
                    android:onClick="openCurrentBalanceRelatory"/>

            <com.halkyproject.pausemenu.components.CustomTextView
                    android:text="@string/finances.projection6months"
                    app:font_name="VideoGame"
                    android:textSize="@dimen/mainMenu.listItem.fontSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:textAllCaps="true"
                    android:textColor="@color/defaultMenuItemColor"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/it_proj6month"
                    android:layout_weight="1"
                    android:onClick="openProjection6m"/>

            <com.halkyproject.pausemenu.components.CustomTextView
                    android:text="@string/finances.projection12months"
                    app:font_name="VideoGame"
                    android:textSize="@dimen/mainMenu.listItem.fontSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:textAllCaps="true"
                    android:textColor="@color/defaultMenuItemColor"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/it_proj12month"
                    android:layout_weight="1"
                    android:onClick="openProjection12m"/>

            <com.halkyproject.pausemenu.components.CustomTextView
                    android:text="@string/finances.projection24months"
                    app:font_name="VideoGame"
                    android:textSize="@dimen/mainMenu.listItem.fontSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:textAllCaps="true"
                    android:textColor="@color/defaultMenuItemColor"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/it_proj24month"
                    android:layout_weight="1"
                    android:onClick="openProjection24m"/>

            <com.halkyproject.pausemenu.components.CustomTextView
                    android:text="@string/finances.projection36months"
                    app:font_name="VideoGame"
                    android:textSize="@dimen/mainMenu.listItem.fontSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:textAllCaps="true"
                    android:textColor="@color/defaultMenuItemColor"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/it_proj36month"
                    android:layout_weight="1"
                    android:onClick="openProjection36m"/>

            <com.halkyproject.pausemenu.components.CustomTextView
                    android:text="@string/finances.projection60months"
                    app:font_name="VideoGame"
                    android:textSize="@dimen/mainMenu.listItem.fontSize"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:textAllCaps="true"
                    android:textColor="@color/defaultMenuItemColor"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/it_proj60month"
                    android:layout_weight="1"
                    android:onClick="openProjection60m"/>


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.finance.FinancesAccountEdit">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <com.halkyproject.pausemenu.components.CustomTextView
                android:id="@+id/titleLbl"
                android:text="@string/finances.editAccount"
                app:font_name="Sva"
                android:textSize="60sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:maxLines="1"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:singleLine="true"/>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/titleLbl"
                android:id="@+id/scrollView3"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/scrollLayout">

                <com.halkyproject.pausemenu.components.CustomTextView
                        android:text="@string/all.name"
                        app:font_name="VideoGame"
                        android:textSize="@dimen/mainMenu.listItem.fontSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorSubtitle"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        app:textAllCaps="true"/>

                <com.halkyproject.pausemenu.components.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:textAllCaps="true"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        style="@style/default_input"
                        android:id="@+id/m_accountName"/>

                <com.halkyproject.pausemenu.components.CustomTextView
                        android:text="@string/finances.accountType"
                        app:font_name="VideoGame"
                        android:textSize="@dimen/mainMenu.listItem.fontSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorSubtitle"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        app:textAllCaps="true"
                        android:id="@+id/customTextView10"/>

                <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/m_groupAccountType">

                    <com.halkyproject.pausemenu.components.CustomRadioButton
                            android:text="@string/finance.accountType.savings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/op_savings"
                            android:textAllCaps="true"
                            android:layout_weight="1"/>

                    <com.halkyproject.pausemenu.components.CustomRadioButton
                            android:text="@string/finance.accountType.current"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/op_current"
                            android:textAllCaps="true"
                            android:layout_weight="1"/>

                    <com.halkyproject.pausemenu.components.CustomRadioButton
                            android:text="@string/finance.accountType.local"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/op_local"
                            android:textAllCaps="true"
                            android:layout_weight="1"/>

                    <com.halkyproject.pausemenu.components.CustomRadioButton
                            android:text="@string/finance.accountType.virtual"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/op_virtual"
                            android:textAllCaps="true"/>
                </RadioGroup>

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:background="@drawable/default_bg"
                        android:backgroundTint="@color/colorSaturation1"
                        android:id="@+id/m_additionalAccountInfoGroup"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp">

                    <com.halkyproject.pausemenu.components.CustomTextView
                            android:text="@string/finances.additionalAccountInfo"
                            app:font_name="Sva"
                            android:textSize="36sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            app:textAllCaps="false"
                            android:id="@+id/customTextView11"
                            android:textAlignment="center"/>

                    <com.halkyproject.pausemenu.components.CustomTextView
                            android:text="@string/finances.bankNumber"
                            app:font_name="VideoGame"
                            android:textSize="@dimen/mainMenu.listItem.fontSize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textColor="@color/colorSubtitle"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            app:textAllCaps="true"
                            android:id="@+id/customTextView5"/>

                    <com.halkyproject.pausemenu.components.CustomEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:textAllCaps="true"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            style="@style/default_input"
                            android:id="@+id/m_bankNumber"
                            android:singleLine="true"
                            android:maxLength="3"
                            android:inputType="number"/>

                    <com.halkyproject.pausemenu.components.CustomTextView
                            android:text="@string/finances.accountBranch"
                            app:font_name="VideoGame"
                            android:textSize="@dimen/mainMenu.listItem.fontSize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textColor="@color/colorSubtitle"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            app:textAllCaps="true"
                            android:id="@+id/customTextView6"/>

                    <com.halkyproject.pausemenu.components.CustomEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:textAllCaps="true"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            style="@style/default_input"
                            android:id="@+id/m_accountBranch"
                            android:digits="0123456798"
                            android:inputType="number"
                            android:singleLine="true"/>

                    <com.halkyproject.pausemenu.components.CustomTextView
                            android:text="@string/finances.accountNumber"
                            app:font_name="VideoGame"
                            android:textSize="@dimen/mainMenu.listItem.fontSize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textColor="@color/colorSubtitle"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            app:textAllCaps="true"
                            android:id="@+id/customTextView3"/>

                    <com.halkyproject.pausemenu.components.CustomEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:textAllCaps="true"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            style="@style/default_input"
                            android:id="@+id/m_accountNumber"
                            android:digits="0123456798"
                            android:inputType="number"
                            android:singleLine="true"/>

                </LinearLayout>

                <com.halkyproject.pausemenu.components.CustomTextView
                        android:text="@string/finances.currentBalance"
                        app:font_name="VideoGame"
                        android:textSize="@dimen/mainMenu.listItem.fontSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/colorSubtitle"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        app:textAllCaps="true"
                        android:id="@+id/customTextView8"/>

                <com.halkyproject.pausemenu.components.CustomEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:textAllCaps="true"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        style="@style/default_input"
                        android:id="@+id/m_accountBalance"
                        android:digits="0123456798,.-"
                        android:inputType="numberSigned|numberDecimal"
                        android:textAlignment="textEnd"
                        android:textDirection="ltr"/>

                <com.halkyproject.pausemenu.components.CustomTextView
                        android:text="@string/finances.accountCurrency"
                        app:font_name="VideoGame"
                        android:textSize="@dimen/mainMenu.listItem.fontSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textColor="@color/colorSubtitle"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_weight="1"
                        app:textAllCaps="true"
                        android:id="@+id/customTextView9"/>

                <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/m_groupCurrency">

                    <com.halkyproject.pausemenu.components.CustomRadioButton
                            android:text="@string/finance.currency.brl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/op_real"
                            android:layout_weight="1"
                            android:textAllCaps="true"
                            android:checked="true"/>

                    <com.halkyproject.pausemenu.components.CustomRadioButton
                            android:text="@string/finance.currency.dolar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/op_dolar"
                            android:layout_weight="1"
                            android:textAllCaps="true"/>

                    <com.halkyproject.pausemenu.components.CustomRadioButton
                            android:text="@string/finance.currency.eur"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/op_euro"
                            android:layout_weight="1"
                            android:textAllCaps="true"/>
                </RadioGroup>

            </LinearLayout>
        </ScrollView>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:id="@+id/linearLayout3"
                android:layout_weight="1">

            <com.halkyproject.pausemenu.components.CustomTextView
                    android:text="@string/all.save"
                    app:font_name="VideoGame"
                    android:textSize="18sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:textColor="@color/defaultBg"
                    android:layout_weight="1"
                    app:textAllCaps="true"
                    android:id="@+id/saveButton"
                    android:textAlignment="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/text_caret_1980"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:clickable="true"
                    android:focusable="true"
                    app:layout_constraintVertical_weight="1"
                    app:layout_constraintWidth_percent="50"
                    app:layout_constraintEnd_toStartOf="@+id/deleteButton"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:onClick="save"/>
        </LinearLayout>


        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/default_bg"
                android:backgroundTint="@color/common_google_signin_btn_text_light_pressed"
                android:visibility="gone"
                android:id="@+id/m_loadingFrame"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@+id/linearLayout4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout3"
                >

            <com.halkyproject.pausemenu.components.CustomTextView
                    android:id="@+id/carregandoLabel"
                    android:text="@string/all.loading"
                    app:font_name="VideoGame"
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:maxLines="1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:singleLine="true"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginTop="8dp"
                    app:textAllCaps="true"/>
        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>
</android.support.design.widget.CoordinatorLayout>
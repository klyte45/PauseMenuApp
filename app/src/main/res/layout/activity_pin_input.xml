<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.PinInput">

    <com.halkyproject.pausemenu.components.CustomTextView
            android:text="@string/all.validate"
            app:font_name="VideoGame"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@color/defaultBg"
            android:layout_weight="1"
            app:textAllCaps="true"
            android:id="@+id/m_saveButton"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:background="@drawable/default_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/colorPrimary"
            android:onClick="validatePin"/>

    <com.halkyproject.pausemenu.components.CustomTextView
            android:id="@+id/title"
            android:text="@string/all.insertPin"
            app:font_name="Sva"
            android:textSize="60sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:maxLines="1"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:singleLine="true"/>

    <com.halkyproject.pausemenu.components.CustomEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:textAllCaps="true"
            style="@style/default_input"
            android:id="@+id/insertPin"
            android:maxLines="1"
            android:lines="1"
            android:singleLine="true"
            android:inputType="numberPassword"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/m_saveButton"/>
</android.support.constraint.ConstraintLayout>
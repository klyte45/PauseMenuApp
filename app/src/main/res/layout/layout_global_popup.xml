<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:id="@+id/pm_root"
                                             tools:context=".superclasses.BasicActivity"
                                             android:background="@drawable/default_bg"
                                             android:backgroundTint="@color/common_google_signin_btn_text_light_pressed"
                                             android:visibility="gone">

    <com.halkyproject.pausemenu.components.CustomTextView
            android:text="@string/all.name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pm_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:textSize="14sp"
            app:font_name="VideoGame"
            app:textAllCaps="true"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/colourizableWhite"/>

    <com.halkyproject.pausemenu.components.CustomTextView
            android:text="@string/all.all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/pm_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:font_name="Sva"
            android:singleLine="true"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/colorProblem"
            android:textSize="60sp"
            android:textAlignment="center"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout5"
            android:layout_marginBottom="128dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0">

        <com.halkyproject.pausemenu.components.CustomTextView
                android:text="@android:string/cancel"
                android:layout_height="wrap_content"
                app:font_name="VideoGame"
                android:id="@+id/pm_cancelButton"
                android:background="@drawable/default_bg"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@color/defaultBg"
                app:textAllCaps="true"
                android:singleLine="true"
                android:textAlignment="center"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:visibility="gone"
                android:layout_width="wrap_content"/>

        <com.halkyproject.pausemenu.components.CustomTextView
                android:text="@android:string/yes"
                android:layout_height="wrap_content"
                app:font_name="VideoGame"
                android:id="@+id/pm_okButton"
                android:background="@drawable/default_bg"
                android:backgroundTint="@color/colorAccent"
                android:textColor="@color/defaultBg"
                app:textAllCaps="true"
                android:singleLine="true"
                android:textAlignment="center"
                android:layout_weight="1"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:focusable="true"
                android:clickable="true"
                android:onClick="closeErrorThrown"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>